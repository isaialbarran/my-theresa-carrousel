{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm ci --include=optional",
  "functions": {
    "server/index.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/dist/client/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/server/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}